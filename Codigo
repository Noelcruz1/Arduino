#include <ESP8266WiFi.h>
#include <WiFiClientSecure.h>
#include <UniversalTelegramBot.h>
#include <ArduinoJson.h>


// Ingresamos el SSID y Password de nuestra red WI-FI
const char* ssid = "Totalplay-2.4G-a380";
const char* password = "Android12358";

// iniciamos el Bot de Telegram ingresando el Token que recibimos de Botfather
#define BOTtoken "5865250406:AAEy4bn-wx4IbSl9TzNgPW6gPP-mKICmYMA"  

// Ingresamos el ID que recibimos del Chat con IDBot
#define chat_id "1678517074"

WiFiClientSecure client;
UniversalTelegramBot bot(BOTtoken, client);

void setup() {
  // Connect to WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi...");
  }
  Serial.println("Connected to WiFi");

  // Send a message
  String message = "Hello from WeMos D1!";
  String response = bot.sendMessage(chat_id, message, "");

  Serial.println(response);
}

void loop() {
  // Do nothing
}
